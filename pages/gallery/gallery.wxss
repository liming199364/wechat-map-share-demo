/* waterfall.wxss */
page{height: 100%}

/*瀑布流*/
scroll-view{
  width: 100%;
  /*height: 1200px*/
}
.waterfall{
  margin: 30rpx 30rpx 0 30rpx;
  box-sizing: border-box;
}
.waterfall .view {
  width: 48%;
  display: inline-block;
  vertical-align: top;
}
.waterfall .view view{
  margin-bottom: 15rpx;
}
.waterfall text{
  text-align: center;
  width: 100%;
  padding: 0 10rpx;
  box-sizing: border-box;
  background-color: #fff;
  height: 68rpx;
  line-height: 68rpx;
  display: inline-block;
  font-size: 24rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  color: #646464;
}
image{
  width: 100%;
  height: 0;
}

.round-click{
    height: 120rpx;
    width: 120rpx;
    background-color: #d92a2a;
    border-radius: 100%;
    position: fixed;
    bottom: 150rpx;
    right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9;
}
.round-click text{
    font-size: 32rpx;
    max-width: 80rpx;
    color: #fff;
    text-align: center;
    background: transparent; 
}

.mask{
  width:100%;
  height:100%;
  position:fixed;
  background-color:#999;
  z-index:9999;
  top:0;
  left:0;
  opacity:0.5;
}